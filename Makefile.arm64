	$(CC) -Os -std:c++17 -EHsc -c -Iinclude -I/c/vcpkg/installed/x86-windows-static/include -I. -D_WIN32_WINNT=0x501 -DUNICODE -D_UNICODE -DBUILDING_WIN_SPARKLE src/settings.cpp         -I../include
	$(CC) -Os -std:c++17 -EHsc -c -Iinclude -I/c/vcpkg/installed/x86-windows-static/include -I. -D_WIN32_WINNT=0x501 -DUNICODE -D_UNICODE -DBUILDING_WIN_SPARKLE src/signatureverifier.cpp -I../include
	$(CC) -Os -std:c++17 -EHsc -c -Iinclude -I/c/vcpkg/installed/x86-windows-static/include -I. -D_WIN32_WINNT=0x501 -DUNICODE -D_UNICODE -DBUILDING_WIN_SPARKLE src/threads.cpp          -I../include
	$(CC) -Os -std:c++17 -EHsc -c -Iinclude -I/c/vcpkg/installed/x86-windows-static/include -I. -D_WIN32_WINNT=0x501 -DUNICODE -D_UNICODE -DBUILDING_WIN_SPARKLE src/updatechecker.cpp    -I../include
	$(CC) -Os -std:c++17 -EHsc -c -Iinclude -I/c/vcpkg/installed/x86-windows-static/include -I. -D_WIN32_WINNT=0x501 -DUNICODE -D_UNICODE -DBUILDING_WIN_SPARKLE src/ui.cpp               -I../include
	$(CC) -Os -std:c++17 -EHsc -c -Iinclude -I/c/vcpkg/installed/x86-windows-static/include -I. -D_WIN32_WINNT=0x501 -DUNICODE -D_UNICODE -DBUILDING_WIN_SPARKLE src/updatedownloader.cpp -I../include

